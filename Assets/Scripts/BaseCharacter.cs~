using UnityEngine;
using System.Collections;

public class BaseCharacter : MonoBehaviour {
	//Species Dependant
	private string characterSpecies;
	private string characterSpeciesDescription;
	private int level;
	private int lust;
	private int height;
	private string cockType;
	private int cockLength;
	private int cockDiameter;
	private int knotDiameter;
	private string ballSize;
	//Body Type Dependant
	private string bodyType;
	private int weight;
	private int health;
	private int defence;
	private int endurance;
	private int strength;
	private int intellect;
	//Species Dependant
	public string CharacterSpecies{get;set;}
	public string CharacterSpeciesDescription{get;set;}
	public int Level{get;set;}
	public int Lust{get;set;}
	public int Height{get;set;}
	public string CockType{get;set;}
	public int CockLength{get;set;}
	public int CockDiameter{get;set;}
	public int KnotDiameter{get;set;}
	public string BallSize{get;set;}
	//Body Type Dependant
	public string BodyType{get;set;}
	public int Weight{get;set;}
	public int Health{get;set;}
	public int Defence{get;set;}
	public int Endurance{get;set;}
	public int Strength{get;set;}
	public int Intellect{get;set;}
}
